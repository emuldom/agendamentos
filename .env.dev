# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
# Sistema de Agendamentos - Ambiente DEV

APP_NAME="Sistema de Agendamentos [DEV]"
APP_ENV=local
APP_KEY=base64:abrw9Wee/0KnEGm1Q4PB8ubxk1HdU7XeK4jamr0x3q4=
APP_DEBUG=true
APP_URL=http://localhost:8080

# Localização
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# Manutenção e Workers
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=10

# === LOGGING PARA DESENVOLVIMENTO ===
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# === BANCO DE DADOS - SQLITE PARA DEV ===
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite
# Comentado para SQLite:
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_USERNAME=root
# DB_PASSWORD=

# === SESSÃO E CACHE - ARQUIVO PARA SIMPLICIDADE ===
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=file
CACHE_PREFIX=agendamentos_dev

# === BROADCASTING E FILESYSTEM ===
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# === QUEUE - SYNC PARA DESENVOLVIMENTO ===
QUEUE_CONNECTION=sync

# === REDIS (OPCIONAL PARA DEV) ===
REDIS_CLIENT=phpredis
REDIS_HOST=redis_agendamentos_dev
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# === MAIL - LOG PARA DESENVOLVIMENTO ===
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="dev@agendamentos.local"
MAIL_FROM_NAME="${APP_NAME}"

# === VITE PARA DESENVOLVIMENTO ===
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=5173

# === SANCTUM PARA DESENVOLVIMENTO ===
SANCTUM_STATEFUL_DOMAINS=localhost:8080,127.0.0.1:8080
SESSION_SAME_SITE=lax

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
# Habilitar query log para debug
DB_LOG_QUERIES=true

# Configurações de desenvolvimento específicas
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true